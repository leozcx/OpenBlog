
.modal.fade(id="#{params.id}", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button" data-dismiss="modal")
					span(aria-hidden="true") &times;
					span.sr-only Close
				h4.modal-title= t('confirm')
			.modal-body
				p #{params.text}
			.modal-footer
				button.btn.btn-primary(type="button" id="#{params.id}ConfirmButton" data-dismiss="modal")= t('confirm')
				button.btn.btn-default(type="button" id="#{params.id}CancelButton" data-dismiss="modal")= t('cancel')
					