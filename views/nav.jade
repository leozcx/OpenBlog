header
	nav.navbar.navbar-default
		div.collapse.navbar-collapse
			ul.nav.navbar-nav
				mixin navItem(active, text, href)
					- if(active) {
						li.active
							a(href="#{href}")= text
					- } else {
						li
							a(href="#{href}")= text
					- }
				+navItem((page == "article"), "Article", "/")
				+navItem((page == "resume"), "Resume", "/resume")
				+navItem((page == "how"), "How", "#")