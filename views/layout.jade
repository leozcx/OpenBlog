doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css', type='text/css', media='all')
		link(rel='stylesheet', href='/stylesheets/style.css', type='text/css', media='all')
		link(rel='stylesheet', href='/stylesheets/summernote.css', type='text/css', media='all')
		link(rel='stylesheet', href='/stylesheets/font-awesome.css', type='text/css', media='all')
		script(data-main="/javascripts/main", src='/javascripts/vendor/require.js')
	body.container
		block content
		
		.modal.fade(id="confirmDialog", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button" data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title= t('confirm')
					.modal-body
						p#confirmDialogContent
					.modal-footer
						button.btn.btn-primary#confirmDialogConfirmButton(type="button" data-dismiss="modal")= t('confirm')
						button.btn.btn-default#confirmDialogCancelButton(type="button" data-dismiss="modal")= t('cancel')
					